{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@cpd/entities/*": ["libs/ui/srd/entities/*"],
      "@cpd/helpers": ["libs/helpers/src"],
      "@cpd/shared": ["libs/shared/src"],
      "@cpd/ui": ["libs/ui/src/atoms"],
      "@cpd/widgets/*": ["libs/widgets/src/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": ["node_modules", ".next"]
}
